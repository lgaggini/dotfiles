# html formats
text/html; /usr/bin/chromium '%s'; description=HTML Text; test=test -n "$DISPLAY";  nametemplate=%s.html
text/html; /usr/bin/w3m '%s';copiousoutput; description=HTML Text; test=test -x /usr/bin/w3m ; nametemplate=%s.html
# document formats
application/pdf; /usr/bin/zathura '%s'; test=test -n "$DISPLAY"; nametemplate=%s.pdf
application/msword; /usr/bin/libreoffice '%s'; test=test -n "$DISPLAY"
application/vnd.ms-excel /usr/bin/libreoffice '%s'; test=test -n "$DISPLAY"
application/vnd.ms-powerpoint; /usr/bin/libreoffice '%s'; test=test -n "$DISPLAY"
application/vnd.oasis.opendocument.chart; /usr/bin/libreoffice '%s'; test=test -n "$DISPLAY"
application/vnd.oasis.opendocument.database; /usr/bin/libreoffice '%s'; test=test -n "$DISPLAY"
application/vnd.oasis.opendocument.formula; /usr/bin/libreoffice '%s'; test=test -n "$DISPLAY"
application/vnd.oasis.opendocument.graphics; /usr/bin/libreoffice '%s'; test=test -n "$DISPLAY"
application/vnd.oasis.opendocument.graphics-template; /usr/bin/libreoffice '%s'; test=test -n "$DISPLAY"
application/vnd.oasis.opendocument.image; /usr/bin/libreoffice '%s'; test=test -n "$DISPLAY"
application/vnd.oasis.opendocument.presentation; /usr/bin/libreoffice '%s'; test=test -n "$DISPLAY"
application/vnd.oasis.opendocument.presentation-template; /usr/bin/libreoffice '%s'; test=test -n "$DISPLAY"
application/vnd.oasis.opendocument.spreadsheet; /usr/bin/libreoffice '%s'; test=test -n "$DISPLAY"
application/vnd.oasis.opendocument.spreadsheet-template; /usr/bin/libreoffice '%s'; test=test -n "$DISPLAY"
application/vnd.oasis.opendocument.text; /usr/bin/libreoffice '%s'; test=test -n "$DISPLAY"
application/vnd.oasis.opendocument.text-master; /usr/bin/libreoffice '%s'; test=test -n "$DISPLAY"
application/vnd.oasis.opendocument.text-template; /usr/bin/libreoffice '%s'; test=test -n "$DISPLAY"
# image formats
image/*; /usr/bin/ristretto '%s'; test=test -n "$DISPLAY"
# compressed file
application/zip; /usr/bin/file-roller '%s'; test=test -n "$DISPLAY"
application/x-rar; /usr/bin/file-roller '%s'; test=test -n "$DISPLAY"
application/x-compressed; /usr/bin/file-roller '%s'; test=test -n "$DISPLAY" 
application/x-gtar; /usr/bin/file-roller '%s'; test=test -n "$DISPLAY"
application/x-bzip2; /usr/bin/file-roller '%s'; test=test -n "$DISPLAY"
