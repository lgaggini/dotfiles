# mailbox & directory
set folder = "~/mail/libersoft"           # mailbox folder
set record = "~/mail/libersoft/sent/"     # sent mail folder
set postponed = "~/mail/libersoft/drafts/"# draft mail folders
set spoolfile = "~/mail/libersoft/INBOX"  # inbox
set trash = "~/mail/libersoft/trash/"     # trash folder for mail delete

# sync headers and signature for reply
reply-hook ~Clg@libersoft.it "source ~/.mutt/profiles/libersoft"

# headers
my_hdr From: Lorenzo Gaggini - Libersoft Srl <lg@libersoft.it>
my_hdr Reply-To: Lorenzo Gaggini - Libersoft Srl <lg@libersoft.it>
my_hdr X-Operating-System: "`uname -sr` - powered by Archlinux" 
my_hdr X-Disclaimer: Free as in Freedom
my_hdr X-Mailer: Mutt http://www.mutt.org
my_hdr X-Editor: Vim http://www.vim.org

# signature
set sig_dashes = yes 
set signature = "~/.signature/libersoft"

# address book
set query_command= "abook --datafile ~/doc/libersoft/contact/libersoft.abook --mutt-query '%s'"

# sidebar
unmailboxes *
mailboxes "+-- libersoft -----------"
mailboxes `echo ~/mail/libersoft/*/`      # mailboxes in the sidebar

# search macro
macro index <F8> "<enter-command>unset wait_key<enter><shell-escape>notmuch-mutt -o ~/mail/libersoft/search -r --prompt search<enter><change-folder-readonly>~/mail/libersoft/search<enter>" "notmuch: search mail"
macro index <F9> "<enter-command>unset wait_key<enter><pipe-message>notmuch-mutt -o ~/mail/libersoft/search -r thread<enter><change-folder-readonly>~/mail/libersoft/search<enter><enter-command>set wait_key<enter>" "notmuch: reconstruct thread"
